#!/usr/bin/env python3

from setuptools import setup

package_name = 'pigpio'

setup(
    name=package_name,
    version='1.44',
    author='joan',
    author_email='joan@abyz.me.uk',
    maintainer='joan',
    maintainer_email='joan@abyz.me.uk',
    url='http://abyz.me.uk/rpi/pigpio/python.html',
    description='Raspberry Pi GPIO module (ROS2 workspace compatible)',
    long_description='Python interface to the pigpio daemon for Raspberry Pi, adapted for ROS2 builds.',
    download_url='http://abyz.me.uk/rpi/pigpio/pigpio.zip',
    license='unlicense.org',
    py_modules=['pigpio'],  # keep as a single-module package
    install_requires=['setuptools'],
    python_requires='>=3.6',
    keywords=['raspberrypi', 'gpio', 'ros2'],
    classifiers=[
        "Programming Language :: Python :: 3",
        "Operating System :: POSIX :: Linux",
    ],
    zip_safe=True,
)
